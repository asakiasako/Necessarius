{{!< default}}

{{#if @blog.cover_image}}
	<header id="blog-cover">
		<div class="inner">
			<div class="blog-cover cover" style="background-image: url('{{img_url @blog.cover_image}}');">
				<img class="blog-icon" src="{{@blog.icon}}"/>
				<h1 class="blog-name"><a href="{{@blog.url}}">{{@blog.title}}</a></h1>
				<p class="blog-desc">{{@blog.description}}</p>
			</div>
			<img class="arrow-up" src="data:image/svg+xml;base64,"/>
		</div>
	</header>
{{/if}}

<div id="index" class="container">

	<main class="content" role="main">

		{{> "loop"}}

	</main>

</div>
